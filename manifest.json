{
  "manifest_version": 3,
  "name": "Moodle出席環境チェッカー",
  "version": "1.0.0",
  "description": "学外ネットワークからのMoodleアクセスを検知・警告します",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
